{
  "name": "book-quote-shorts",
  "version": "1.0.0",
  "description": "Interactive book quote shorts with React frontend and Node.js backend",
  "scripts": {
    "dev": "docker-compose up --build",
    "start": "docker-compose up",
    "stop": "docker-compose down",
